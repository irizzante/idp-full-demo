{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "crossplane": {
    "fileMatch": ["crossplane/.+\\.yaml$"]
  },
  "packageRules": [
    {
        "matchManagers": ["crossplane"],
        "matchFileNames": ["crossplane/**"],
        "groupName": "providers"
    }
  ]
}
